@using Testproject.Models

@model Employee
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>template</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        media (min-width: 1025px) {
            .h-custom

        {
            height: 100vh !important;
        }

        }
    </style>
</head>

<body>
    <section class="h-100 h-custom" style="background-color: #8fc4b7;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-8 col-xl-6">
                    <div class="card rounded-3">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img3.webp"
                             class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
                             alt="Sample photo">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Registration Info</h3>

                         
                                @using (Html.BeginForm())
                                {

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form3Example1q"> <b> Name<span class="text-danger">*</span></b></label>
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder="Enter Name" })
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                          <div class="form-outline mb-4">
                                            <label class="form-label" for="form3Example1q"> <b> Designation<span class="text-danger">*</span></b></label>
                                            <div class="input-group">
                                                @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })
                                                @Html.DropDownListFor(model => model.Designation, new List<SelectListItem>

                                            {

                                            new SelectListItem { Text="Ceo",Value="Ceo"},
                                            new SelectListItem { Text="Manager",Value="Manager"},
                                            new SelectListItem { Text="Hr",Value="Hr"},
                                            new SelectListItem { Text="Developer",Value="Developer"},
                                            new SelectListItem { Text="Manager",Value="Manager"},

                                            }, new { @class = "form-group" })
                                            </div>
                                </div>


                                    </div>
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="form3Example1q"> <b> salary<span class="text-danger">*</span></b></label>
                                        @Html.TextBoxFor(model => model.salary, new { @class = "form-control", placeholder="Enter Name" })
                                    </div>

                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form3Example1q"> <b> Email<span class="text-danger">*</span></b></label>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder="Enter Name" })
                                </div>

                                <div class="row mb-4 pb-2 pb-md-0 mb-md-5">
                                    <div class="col-md-6">

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form3Example1q"> <b> Mobile<span class="text-danger">*</span></b></label>
                                            @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control", placeholder="Enter Name" })
                                        </div>



                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form3Example1q"> <b> Qualification<span class="text-danger">*</span></b></label>
                                            <div class="input-group">
                                                @Html.ValidationMessageFor(model => model.Qualification, "", new { @class = "text-danger" })
                                                @Html.DropDownListFor(model => model.Qualification, new List<SelectListItem>

                                            {

                                            new SelectListItem { Text="Mtech",Value="Mtech"},
                                            new SelectListItem { Text="Mba",Value="Mba"},
                                            new SelectListItem { Text="Btech",Value="Btech"},
                                            new SelectListItem { Text="Degree",Value="Degree"},

                                            }, new { @class = "form-group" })
                                            </div>
                                        </div>


                                    </div>
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="form3Example1q"> <b> Manager<span class="text-danger">*</span></b></label>
                                        @Html.TextBoxFor(model => model.Manager, new { @class = "form-control", placeholder="Enter Name" })
                                    </div>

                                </div>

                                <button type="submit" class="btn btn-success btn-lg mb-1">Submit</button>

                           }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
